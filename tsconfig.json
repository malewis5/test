{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "experimentalDecorators": true,
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "lf",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types", "src/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "pages/**/*.ts", "pages/**/*.tsx", "pages/sitemap.xml.js"],
  "exclude": ["__mocks__", "node_modules", ".vscode", ".next", "src/**/*.test.jsx"]
}
